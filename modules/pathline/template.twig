{% if items %}
    <ul class="breadcrumb">
        {% for item in items %}
            <li>
                {% if not item.default %}
                    <a href="{{ item.href }}">{{ item.title }}</a> <span class="divider">/</span>
                {% else %}
                    <span>{{ item.title }}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}