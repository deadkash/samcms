<ul class="nav nav-list">
    {% for item in items %}
        {% if item.subitems %}
            <li {% if item.current %}class="active"{% endif %}>
                <a href="{{ item.url }}" class="dropdown-toggle" data-toggle="dropdown">
                    {{ item.title }}
                </a>
                <ul class="nav nav-list">
                    {% for subitem in item.subitems %}
                        <li {% if subitem.current %}class="active"{% endif %}><a href="{{ subitem.url }}">{{ subitem.title }}</a></li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li {% if item.current %}class="active"{% endif %}><a href="{{ item.url }}">{{ item.title }}</a></li>
        {% endif %}
    {% endfor %}
</ul>