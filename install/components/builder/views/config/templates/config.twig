<!doctype html>
<html lang="ru-RU">
<head>
    <meta charset="UTF-8">
    <title>{{ ln.install_title }}</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap-responsive.css"/>
    <link rel="stylesheet" href="/install/components/builder/assets/css/main.css"/>
</head>
<body>
<div class="container">
    <div class="page-header">
        <h1>{{ ln.install_config_step1 }} <small>{{ ln.install_config_step1_desc }}</small></h1>
    </div>
    <form class="form-horizontal" action="/install/" method="GET">
        <fieldset>
            <legend>{{ ln.install_config_db }}</legend>
            <div class="control-group">
                <label class="control-label" for="dbhost">{{ ln.install_config_dbhost }}</label>
                <div class="controls">
                    <input type="text" id="dbhost" name="dbhost" value="localhost">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="dbuser">{{ ln.install_config_dbuser }}</label>
                <div class="controls">
                    <input type="text" id="dbuser" name="dbuser">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="dbpass">{{ ln.install_config_dbpass }}</label>
                <div class="controls">
                    <input type="password" id="dbpass" name="dbpass">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="dbname">{{ ln.install_config_dbname }}</label>
                <div class="controls">
                    <input type="text" id="dbname" name="dbname">
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ ln.install_config_theme }}</legend>
            <div class="control-group">
                <label class="control-label" for="theme">{{ ln.install_config_theme_site }}</label>
                <div class="controls">
                    {% if siteThemes %}
                    <select name="theme" id="theme">
                        {% for theme in siteThemes %}
                        <option value="{{ theme }}">{{ theme }}</option>
                        {% endfor %}
                    </select>
                    {% endif %}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="admintheme">{{ ln.install_config_theme_admin }}</label>
                <div class="controls">
                    {% if adminThemes %}
                    <select name="admintheme" id="admintheme">
                        {% for theme in adminThemes %}
                        <option value="{{ theme }}">{{ theme }}</option>
                        {% endfor %}
                    </select>
                    {% endif %}
                </div>
            </div>
        </fieldset>
        <div class="control-group">
            <div class="controls">
                <a href="/install/" class="btn">{{ ln.install_config_back }}</a>
                <input type="hidden" name="task" value="setConfig" />
                <button type="submit" name="view" value="user" class="btn btn-info">{{ ln.install_config_continue }} <i class="icon icon-arrow-right icon-white"></i></button>
            </div>
        </div>
    </form>
</div>
</body>
</html>