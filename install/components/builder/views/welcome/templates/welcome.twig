<!doctype html>
<html lang="ru-RU">
<head>
    <meta charset="UTF-8">
    <title>{{ ln.install_title }}</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap-responsive.css"/>
    <link rel="stylesheet" href="/install/components/builder/assets/css/main.css"/>
</head>
<body>
    <div class="container">
        <div class="hero-unit text-center">
            <h1>{{ ln.install_welcome }}</h1>
            <p>{{ ln.install_welcome_subtext }}</p>
        </div>
        <form action="/install/" method="GET">
            <div class="row">
                <div class="span5 offset2">
                    <p>{{ ln.install_welcome_description1 }}</p>
                    <p>{{ ln.install_welcome_description2 }}</p>
                </div>
                {% if languages %}
                <div class="span5">
                    <p>
                        <label for="language">{{ ln.install_welcome_select_language }}:</label>
                        <select name="language" id="language" multiple>
                            {% for language in languages %}
                            <option value="{{ language.value }}" {% if language.selected %}selected="selected"{% endif %}>{{ language.title }}</option>
                            {% endfor %}
                        </select>
                    </p>
                </div>
                {% endif %}
            </div>
            <div class="row text-center">
                <input type="hidden" name="view" value="config" />
                <input type="hidden" name="task" value="setLanguage" />
                <p><button class="btn btn-large btn-primary">{{ ln.install_welcome_continue }}</button></p>
            </div>
        </form>
    </div>
</body>
</html>