<script type="text/javascript">
    $(document).ready(function(){
        $('#{{ param.name }}_datepicker').datepicker();
        $('#{{ param.name }}_time').timepicker({
            minuteStep: 1,
            showSeconds: true,
            showMeridian: false
        });
        $('form').submit(function(){
            var value = $('#{{ param.name }}_date').val() + ' ' + $('#{{ param.name }}_time').val();
            $('#{{ param.name }}').val(value);

            return true;
        });
    })
</script>

<div class="input-append date" id="{{ param.name }}_datepicker" data-date="{{ param.date }}" data-date-format="dd.mm.yyyy">
    <input class="span2" size="16" type="text" id="{{ param.name }}_date" value="{{ param.date }}" readonly="readonly">
    <span class="add-on"><i class="icon-calendar"></i></span>
</div>
<div class="input-append bootstrap-timepicker">
    <input id="{{ param.name }}_time" type="text" class="input-small" value="{{ param.time }}">
    <span class="add-on"><i class="icon-time"></i></span>
</div>
<input type="hidden" id="{{ param.name }}" name="{{ param.name }}" value="" />