<div>
    <h1>{{ ln.menueditor_menulist }}</h1>
    <form action="{{ url }}" method="POST">
        <div class="buttons">
            <div class="btn-group">
                <a href="{{ add }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i>&nbsp;{{ ln.menueditor_add }}</a>
                <button name="task" value="delete" type="submit" class="btn btn-default delete-btn"><i class="glyphicon glyphicon-trash"></i>&nbsp;{{ ln.menueditor_delete }}</button>
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="menus">
            <table class="table table-striped">
                <tr>
                    <th class="th30"><input type="checkbox" class="check-all"></th>
                    <th class="th30">ID</th>
                    <th>{{ ln.menueditor_name }}</th>
                    <th class="th100"></th>
                </tr>
                {% for menu in items %}
                <tr>
                    <td><input type="checkbox" class="check-item" name="item[]" value="{{ menu.id }}"></td>
                    <td>{{ menu.id }}</td>
                    <td><a href="{{ menu.items }}">{{ menu.title }}</a></td>
                    <td class="btnset">
                        <div class="btn-group">
                            <a href="{{ menu.edit }}" title="{{ ln.menueditor_edit }}" type="button" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i></a>
                            <a href="{{ menu.items }}" title="{{ ln.menueditor_items }}" type="button" class="btn btn-default"><i class="glyphicon glyphicon-list"></i></a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </form>
</div>

