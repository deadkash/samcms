<div class="menu-add">
    <h1>{{ ln.menueditor_new_menu }}</h1>
    <form action="{{ url }}" class="form-horizontal" method="POST" role="form">
        <div class="form-group{% if menu_empty_title %} error{% endif %}">
            <label for="title" class="col-lg-2 control-label">{{ ln.menueditor_title }}</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" id="title" name="title" value="">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                <input type="hidden" name="task" value="save" />
                <button class="btn btn-default" type="submit">{{ ln.menueditor_save }}</button>
                <button class="btn btn-default" type="button" onclick="history.back();">{{ ln.menueditor_cancel }}</button>
            </div>
        </div>
    </form>
</div>