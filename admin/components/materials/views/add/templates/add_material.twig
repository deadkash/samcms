<div class="menu-add">
    <h1>{{ ln.materials_new_material }}</h1>
    <form action="{{ url }}" class="form-horizontal" method="POST">
        {% for field in fields %}
        <div class="form-group{% if field.error %} has-error{% endif %}">
            <label class="col-lg-2 control-label" for="{{ field.name }}"><strong>{{ field.title }}</strong> {% if field.required %}<span class="red">*</span>{% endif %}</label>
            <div class="col-lg-10">{{ field.html }}</div>
        </div>
        {% endfor %}
        <div class="form-group">
            <div class="col-lg-10">
                <input type="hidden" name="task" value="save" />
                <button class="btn btn-default" type="submit">{{ ln.materials_save }}</button>
                <button class="btn btn-default" type="button" onclick="history.back();">{{ ln.materials_cancel }}</button>
            </div>
        </div>
    </form>
</div>