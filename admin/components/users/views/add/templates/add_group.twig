<div class="menu-add">
    <h1>{{ ln.users_new_group }}</h1>
    <form action="{{ url }}" class="form-horizontal" method="POST">
        <div class="form-group{% if messages.group_add %} has-error{% endif %}">
            <label class="col-lg-2 control-label" for="name">{{ ln.users_title }}</label>
            <div class="col-lg-6">
                <input type="text" class="form-control" id="name" name="name" value="">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-6">
                <input type="hidden" name="task" value="save" />
                <button class="btn btn-default" type="submit">{{ ln.users_save }}</button>
                <button class="btn btn-default" type="button" onclick="history.back();">{{ ln.users_cancel }}</button>
            </div>
        </div>
    </form>
</div>