<div class="menu-add">
    <h1>{{ ln.forms_forms }}</h1>
    <form action="{{ url }}" method="POST">
        <div class="buttons">
            <div class="btn-group">
                <a href="{{ add }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i>&nbsp;{{ ln.forms_add }}</a>
                <button name="task" value="delete" type="submit" class="btn btn-default"><i class="glyphicon glyphicon-trash"></i>&nbsp;{{ ln.forms_delete }}</button>
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="menus">
            <table class="table table-striped">
                <tr>
                    <th class="th30"><input type="checkbox" class="check-all"></th>
                    <th class="th30">ID</th>
                    <th>{{ ln.forms_name }}</th>
                    <th class="th100"></th>
                </tr>
                {% for form in forms %}
                    <tr>
                        <td><input type="checkbox" class="check-item" name="item[]" value="{{ form.id }}"></td>
                        <td>{{ form.id }}</td>
                        <td><a href="{{ form.edit }}">{{ form.title }}</a></td>
                        <td class="btnset">
                            <div class="btn-group">
                                <a href="{{ form.edit }}" title="{{ ln.forms_edit }}" type="button" class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a href="{{ form.fields }}" title="{{ ln.forms_fields }}" type="button" class="btn btn-default"><i class="glyphicon glyphicon-list"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </form>
</div>