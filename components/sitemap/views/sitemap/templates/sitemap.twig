{% if menus %}
<div class="sitemap">
    {% for menu in menus %}
    <ul>
        {% for item in menu %}
        <li>
            <a href="{{ item.url }}">{{ item.title }}</a>
            {% if item.subitems %}
            <ul>
                {% for subitem in item.subitems %}
                <li><a href="{{ subitem.url }}">{{ subitem.title }}</a></li>
                {% endfor %}
            </ul>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
    {% endfor %}
</div>
{% endif %}